# OpenAI API (required)
OPENAI_API_KEY=your-openai-api-key

# Tavily for web search (required for news and company research)
# Get your key at: https://tavily.com/
TAVILY_API_KEY=your-tavily-api-key

# EnrichLayer for LinkedIn data (optional, uses simulated data if not set)
# Get your key at: https://enrichlayer.com/
ENRICHLAYER_API_KEY=your-enrichlayer-api-key

# LangSmith for observability (recommended)
# Get your key at: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=true
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=research-squad
